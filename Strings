package assistedpractice;

public class strings {

	public static void main(String[] args) {
System.out.println("Methods of Strings");
		
		String sl=new String("Hello world");
		System.out.println(sl.length());

		
		String sub=new String("Welcomes you");
		System.out.println(sub.substring(2));

		
		String s1="Hi";
		String s2="Hey";
		System.out.println(s1.compareTo(s2));


		String s4="";
		System.out.println(s4.isEmpty());

		
		String s5="Hey naveen";
		System.out.println(s1.toLowerCase());
		
		//replace
		String s6="Hi alex";
		String replace=s2.replace('d', 'l');
		System.out.println(replace);

		//equals
		String x="Welcome to world";
		String y="WeLcOmE tO world";
		System.out.println(x.equals(y));
 
		System.out.println("\n");
		System.out.println("Creating StringBuffer");

		StringBuffer s=new StringBuffer("Welcome to world!");
		s.append("Enjoy your practice");
		System.out.println(s);

		
		s.insert(0, 'w');
		System.out.println(s);

		
		StringBuffer sb=new StringBuffer("Hi");
		sb.replace(0, 2, "hEl");
		System.out.println(sb);

		
		sb.delete(0, 1);
		System.out.println(sb);
		
		
		System.out.println("\n");
		System.out.println("Creating StringBuilder");
		StringBuilder sb1=new StringBuilder("Happy");
		sb1.append("practice");
		System.out.println(sb1);

		System.out.println(sb1.delete(0, 1));

		System.out.println(sb1.insert(1, "Welcome to Eclipse"));

		System.out.println(sb1.reverse());
				
			
		System.out.println("\n");
		System.out.println("Conversion of Strings to StringBuffer and StringBuilder");
		
		String str = "Hey naveen"; 
        
       
        StringBuffer sbr = new StringBuffer(str); 
        sbr.reverse(); 
        System.out.println("String to StringBuffer");
        System.out.println(sbr); 
          
        
        StringBuilder sbl = new StringBuilder(str); 
        sbl.append("worldwide"); 
        System.out.println("String to StringBuilder");
        System.out.println(sbl);              		
	}


}
